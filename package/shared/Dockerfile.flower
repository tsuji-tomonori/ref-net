FROM python:3.12-slim

WORKDIR /app

# システム依存関係
RUN apt-get update && apt-get install -y \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Python依存関係
COPY pyproject.toml uv.lock ./
RUN pip install uv
RUN uv sync --frozen

# アプリケーションコピー
COPY src/ ./src/

# 環境変数
ENV PYTHONPATH=/app/src

# Flower用ポート
EXPOSE 5555

# 起動コマンド（認証付き）
CMD ["celery", "-A", "refnet_shared.celery_app", "flower", \
     "--port=5555", \
     "--basic_auth=${FLOWER_USER}:${FLOWER_PASSWORD}"]
